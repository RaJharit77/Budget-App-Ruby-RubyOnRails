<div class="w-full max-w-4xl bg-white bg-opacity-90 rounded-lg shadow-lg p-8 mx-auto mt-8">
  <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">New Transaction</h1>

  <%= form_with model: @transaction, local: true do |form| %>
    <div class="space-y-4">
      <div>
        <%= form.label :amount, class: "block text-sm font-medium text-gray-700" %>
        <%= form.number_field :amount, step: 0.01, class: "mt-1 py-2 px-2 my-2 mx-2 block w-full rounded-lg shadow-sm border border-black" %>
      </div>

      <div>
        <%= form.label :date, class: "block text-sm font-medium text-gray-700" %>
        <%= form.date_field :date, class: "mt-1 py-2 px-2 my-2 mx-2 block w-full rounded-lg shadow-sm border border-black" %>
      </div>

      <div>
        <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :description, class: "mt-1 py-2 px-2 my-2 mx-2 block w-full rounded-lg shadow-sm border border-black" %>
      </div>

      <div>
        <%= form.label :category_id, class: "block text-sm font-medium text-gray-700" %>
        <%= form.collection_select :category_id, Category.all, :id, :name, { prompt: "Select a category" }, class: "mt-1 py-2 px-2 my-2 mx-2 block w-full rounded-lg shadow-sm border border-black" %>
      </div>

      <div class="text-center">
        <%= form.submit "Create Transaction", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg" %>
      </div>
    </div>
  <% end %>
</div>
