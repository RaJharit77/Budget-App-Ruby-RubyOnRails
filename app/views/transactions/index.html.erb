<div class="w-full max-w-4xl bg-white bg-opacity-90 rounded-lg shadow-lg p-8">
  <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">Transactions</h1>

  <%= link_to 'New Transaction', new_transaction_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mb-6 inline-block" %>

  <div class="overflow-x-auto">
    <table class="min-w-full bg-white border border-gray-200 rounded-lg">
      <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 border-b border-gray-200 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
        <th class="px-6 py-3 border-b border-gray-200 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
        <th class="px-6 py-3 border-b border-gray-200 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
        <th class="px-6 py-3 border-b border-gray-200 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
        <th colspan="3" class="px-6 py-3 border-b border-gray-200 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
      </tr>
      </thead>

      <tbody class="divide-y divide-gray-200">
      <% if @transactions.any? %>
        <% @transactions.each do |transaction| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= transaction.amount %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= transaction.date %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= transaction.description %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= transaction.category&.name || 'No Category' %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <%= link_to 'Show', transaction, class: "text-blue-600 hover:text-blue-900" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <%= link_to 'Edit', edit_transaction_path(transaction), class: "text-green-600 hover:text-green-900" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-600 hover:text-red-900" %>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="7" class="px-6 py-4 text-center text-gray-500">No transactions found.</td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-8">
    <%= line_chart Transaction.group_by_day(:date).sum(:amount), class: "w-full" %>
  </div>
</div>
